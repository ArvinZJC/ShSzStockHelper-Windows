            <DataTemplate>
                <TextBlock Margin="6,10,0,0"
                           Text="{x:Static properties:Resources.BusyIndicatorHomeWindowLoading_Header}"
                           TextAlignment="Center"/>
            </DataTemplate>
        </syncfusion:SfBusyIndicator.HeaderTemplate>

